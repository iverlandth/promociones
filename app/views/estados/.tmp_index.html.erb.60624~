<h1>Listing estados</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>





<% @estados.each do |estado| %>
  <tr>
    <td><%= estado.nombre %></td>
    <td><%= link_to 'Show', estado %></td><% if can? :update, @estados %>
    <td><%= link_to 'Edit', edit_estado_path(estado) %></td> <% end %><% if can? :destroy, @estados %>
    <td><%= link_to 'Destroy', estado, confirm: 'Are you sure?', method: :delete %></td><% end %>
  </tr>
<% end %>
</table>

