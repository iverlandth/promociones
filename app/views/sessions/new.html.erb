<div id="caja2">
	<h1 align="center">Iniciar Sesión</h1>
	<hr  />
    <div class="global">
	<%= form_tag sessions_path do %>
	<div id="cuerpop">
		<div class="field">
			<%= label_tag :Correo_electrónico do %>
        <% "Correo electrónico <span class='form-required' title='Este campo es obligatorio.'>*</span>".html_safe %>
        <% end %>
			<%= text_field_tag :email, params[:email], :placeholder => "ejemplo@hotmail.com", :required => "true", :type => "email", :autofocus => "true"    %>
		</div>
		<div class="field">
			<%= label_tag :Contraseña do %>
        <% "Contraseña <span class='form-required' title='Este campo es obligatorio.'>*</span>".html_safe %>
        <% end %>
     </div>

			<%= password_field_tag :password  %>

		</div>
          <div class="botontabla">
	<p>
			<%= link_to "¿No puede acceder a su cuenta?", new_password_reset_path %>
	</p>
            </div>
	</div>
	<hr   />
	<div class="fields">
		<%= check_box_tag :remember_me, 1, params[:remember_me] %>
		<%= label_tag :Mantener_la_sesión_iniciada %>
	</div>
	
	<div class="actions">
   		<%= submit_tag "iniciar sesión" %>
	</div>
</div>
<% end %> 